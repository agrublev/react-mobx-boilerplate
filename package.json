{
	"name": "sample",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "parcel public/index.html --no-cache --open",
		"build": "parcel build public/index.html --no-cache",
		"build:test": "babel-node src --config .babelrc --out-dir dist --exclude src/index.js",
		"deploy": "surge dist instanoteapp.surge.sh",
		"test": "ava -v",
		"test:watch": "ava -v --watch",
		"test:reset": "ava --update-snapshots",
		"test:cover": "nyc --reporter=lcov ava --verbose && nyc report",
		"test:nyc": "nyc ava",
		"docs": "update-markdown-jsdoc",
		"not:ready:test:e2e": "codeceptjs run --steps"
	},
	"nyc": {
		"check-coverage": true,
		"reporter": [
			"lcov",
			"json-summary",
			"text-summary"
		],
		"exclude": [
			"src/index.js",
			"src/serviceWorker.js",
			"coverage/**",
			"tests/**",
			"test{,-*}.js",
			"**/*{.,-}test.js",
			"**/node_modules/**",
			"**/babel.config.js"
		],
		"cache": true,
		"all": true
	},
	"ava": {
		"require": [
			"@babel/register"
		],
		"babel": {
			"testOptions": {
				"presets": [
					[
						"@babel/preset-env",
						{
							"targets": {
								"node": "8.10"
							},
							"corejs": "2",
							"useBuiltIns": "usage"
						}
					],
					[
						"@ava/transform-test-files",
						{
							"powerAssert": false
						}
					]
				],
				"plugins": [
					"istanbul",
					"@babel/plugin-syntax-jsx",
					"babel-plugin-transform-import-styles",
					[
						"@babel/plugin-proposal-decorators",
						{
							"legacy": true
						}
					],
					[
						"@babel/plugin-proposal-class-properties",
						{
							"loose": true
						}
					]
				]
			}
		},
		"files": [
			"tests/*.js"
		]
	},
	"dependencies": {
		"react": "^16.8.6",
		"react-dom": "^16.8.6"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"@ava/babel-preset-stage-4": "^2.0.0",
		"@ava/babel-preset-transform-test-files": "^5.0.0",
		"@babel/core": "^7.4.3",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-decorators": "^7.4.0",
		"@babel/plugin-syntax-class-properties": "^7.2.0",
		"@babel/plugin-syntax-jsx": "^7.2.0",
		"@babel/plugin-transform-runtime": "^7.4.3",
		"@babel/polyfill": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.4.0",
		"ava": "^1.4.1",
		"babel-plugin-istanbul": "^5.1.1",
		"babel-plugin-transform-import-styles": "^0.0.11",
		"babel-template": "^6.26.0",
		"cheerio": "^1.0.0-rc.2",
		"codeceptjs": "^2.0.8",
		"delay": "^4.2.0",
		"eslint": "^5.16.0",
		"faker": "^4.1.0",
		"less": "^3.9.0",
		"mobx": "^5.9.4",
		"mobx-react": "^5.4.3",
		"mobx-state-tree": "^3.14.0",
		"nyc": "^13.3.0",
		"ow": "^0.12.0",
		"p-retry": "^4.1.0",
		"parcel": "^1.12.3",
		"prettier": "^1.16.4",
		"puppeteer": "^1.6.0",
		"puppeteer-email": "^0.1.0",
		"puppeteer-extra": "^2.0.7",
		"puppeteer-extra-plugin-anonymize-ua": "^2.1.4",
		"puppeteer-extra-plugin-stealth": "^2.0.7",
		"random": "^2.0.12",
		"react-test-renderer": "^16.8.6",
		"surge": "^0.20.3"
	}
}
